@model IEnumerable<Model.DTO.OrderExDTO>

@{
	ViewBag.Title = "Driver History";
}

<h2>@Resources.Resource.OrdersHistory</h2>

<table class="table" id="orders_history">
	<tr>
		<th>
			@Resources.Resource.OrderAddress
		</th>
		<th>
			@Resources.Resource.OrderTime
		</th>
		<th>

		</th>
	</tr>

	@foreach (var item in Model) {
		<tr>
			<td>
				@if (item.Address != null)
				{
					@Html.DisplayFor(modelItem => item.Address)
				}
				else
				{
					@Html.DisplayFor(modelItem => item.FullAddressFrom);
				}
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OrderTime)
			</td>
			<td>
				<button data-feedbackId="@item.DriverFeedbackId" data-orderId="@item.Id" type="button" class="btn btn-warning addFeedbackButton" data-target="#driverFeedbackModal" data-toggle="modal">@Resources.Resource.AddFeedback</button>
			</td>
		</tr>
	}

</table>
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="~/Scripts/DriverEx/DriverFeedback.js"></script>