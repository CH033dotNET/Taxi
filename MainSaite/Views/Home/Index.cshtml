@using Model.DTO
@using Common.Enum

    @*Our Img Slidding*@
    <div id="carousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li class="active" data-target="#carousel" data-slide-to="0"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
            <li data-target="#carousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active qwert">
                <img src="~/Content/Picture/0-well-traveled-passport-taxi-cab-global-british-american-vietnamese-engagement-wedding-photos-photographer.jpg" alt="" />
            </div>
            <div class="item qwert">
                <img src="~/Content/Picture/2.jpg" alt="" />

            </div>
            <div class="item qwert">
                <img src="~/Content/Picture/5.jpg" alt="" />

            </div>
            <div class="item qwert">
                <img src="~/Content/Picture/tech.png" alt=""/>
            </div>
        </div>
        <a href="#carousel" class="left carousel-control" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a href="#carousel" class="right carousel-control" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
<div class="col-md-12" id="latestNews">
	<p>@Resources.Resource.OurLatestNews:</p>
	<div class="row">
		@foreach (var news in ViewBag.News)
		{
			<div class="col-md-6">
				<h2 class="text-center">@news.Title</h2>
				<p>@Html.Raw(news.Article)</p>
			</div>
		}
	</div>
</div>
<div class="col-md-12">
	<div class="col-md-6 col-sm-12" id="best-drivers">
		<h4>@Resources.Resource.BestDrivers.ToUpper()</h4>
	</div>
	<div class="col-md-6 col-sm-12" id="best-clients">
		<h4>@Resources.Resource.BestClients.ToUpper()</h4>
	</div>
</div>

<script src="~/Scripts/BestUsers.js"></script>