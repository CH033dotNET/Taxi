@using Model
@model Model.DTO.LocationDTO

@{
    ViewBag.Title = "CreateLocation";
}
<legend>@Resources.Resource.TitleCreateLocation</legend>
<h2>@Resources.Resource.CreateLocation</h2>


<div class="row">
    <form action="CreateLocation" method="post">
        <div class="col-md-6">

            <select name="Id" class="form-control">
                @{

                    foreach (District District in ViewBag.Districts)
                    {
                        <option value="@District.Id"> @District.Name </option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <input type="submit" value="ok" class="btn btn-default">
        </div>
    </form>
</div>


