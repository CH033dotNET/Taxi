@model IEnumerable<Model.DTO.WorkshiftHistoryDTO>

@{
	ViewBag.Title = "DistrictPart";
	string username = (Session["user"] as Model.DTO.UserDTO).UserName;
}

<div>
	<form method="post">
		<div class="page-header">
			<h1>Welcome home,<small>@username</small></h1>
		</div>
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">[Garage]</h3>
			</div>
			<div class="panel-body">
				<div class="bs-callout bs-callout-primary">
					<h4>This is your working place</h4>
					Here you can find information about other drivers currently working.
					To start workingshift please press "Start Workingshift" button
				</div>
				<div class="bs-callout bs-callout-warning">
					<h4>Keep in mind</h4>
					Do not forget to end your working shift by pressing "End" button
				</div>
			</div>
			<div class="panel-footer">
				@Html.ActionLink("[Add new Car?]", "CarCreate", "Settings", null, new { @class = "btn btn-success" })
				<input type="submit" class="btn btn-success" value="@ViewBag.SubmitValue" />
			</div>
			<div class="table-list">
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr class="info">
								<th>
									[#]
								</th>
								<th>
									Shift start:
								</th>
								<th>
									Shift ended:
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<div class="editor_field"></div>
										@Html.DisplayFor(modelItem => item.DriverId)
									</td>
									<td>
										<div class="editor_field"></div>
										@Html.DisplayFor(modelItem => item.WorkStarted)
									</td>
									<td>
										<div class="editor_field"></div>
										@Html.DisplayFor(modelItem => item.WorkEnded)
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</form>
</div>
