        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CarOccupation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CarOccupation)
            @Html.ValidationMessageFor(model => model.CarOccupation)
        </div>

        <div class="editor-label">
