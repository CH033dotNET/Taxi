@model IEnumerable<Model.DTO.NewsDTO>

@{
    ViewBag.Title = Resources.Resource.News;
}



<p>
	<a href="/News/Edit/?id=-1" class="btn btn-success">@Resources.Resource.CreateNewArticle</a>
</p>

<table class="table newTableStyle">
    <tr>
        <th>
            @Resources.Resource.Title
        </th>
        <th>
            @Resources.Resource.CreatedTime
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedTime)
        </td>
        <td>
			<a href="/News/Edit/?id=@item.Id" class="btn btn-success">@Resources.Resource.Edit</a>
            <button type="button" class="btn btn-success warning" onclick="DeleteArticle(@item.Id)">@Resources.Resource.Delete</button>
        </td>
    </tr>
}

</table>
