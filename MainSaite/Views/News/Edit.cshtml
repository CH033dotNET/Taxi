@model Model.DTO.NewsDTO

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
			<h2>[Title]</h2>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
			<h2>[Article]</h2>
        </div>
        <div class="editor-field">
            <textarea id="Article" rows="25" cols="100">@Model.Article</textarea>
            @Html.ValidationMessageFor(model => model.Article)
        </div>

        <p>
			<button type="button" class="btn btn-success" onclick="SaveArticle(@Model.Id)">@Resources.Resource.Save</button>
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
