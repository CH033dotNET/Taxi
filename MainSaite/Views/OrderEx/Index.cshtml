@model IEnumerable<Model.DTO.OrderExDTO>

@{
	ViewBag.Title = "Orders";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table" id="orders">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Address)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@if (item.Address != null) {
					@Html.DisplayFor(modelItem => item.Address)
				}
				else {
					@Html.DisplayFor(modelItem => item.AddressFrom.Address)
				}
			</td>
			<td>
				<input itemid="@item.Id" type="button" value="Approve" class="approve btn btn-success" /> |
				<input itemid="@item.Id" type="button" value="Deny" class="deny btn btn-danger" />
			</td>
		</tr>
	}

</table>
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="~/Scripts/OrderExLogic/OperatorOrder.js"></script>
